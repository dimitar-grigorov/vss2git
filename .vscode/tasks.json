{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "${config:msbuildPath}",
      "args": [
        "${input:buildTarget}",
        "/p:Configuration=${input:buildConfiguration}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-${input:project}-${input:configuration}",
      "type": "shell",
      "command": "${config:msbuildPath}",
      "args": [
        "${input:projectPath}",
        "/p:Configuration=${input:configuration}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "${config:msbuildPath}",
      "args": [
        "Vss2Git.sln",
        "/t:Clean",
        "/p:Configuration=${input:buildConfiguration}"
      ],
      "problemMatcher": "$msCompile"
    }
  ],
  "inputs": [
    {
      "id": "buildConfiguration",
      "type": "pickString",
      "description": "Configuration",
      "options": ["Debug", "Release"],
      "default": "Debug"
    },
    {
      "id": "buildTarget",
      "type": "pickString",
      "description": "Target",
      "options": [
        "Vss2Git.sln",
        "Vss2Git/Vss2Git.csproj",
        "VssDump/VssDump.csproj",
        "HashTest/HashTest.csproj"
      ],
      "default": "Vss2Git.sln"
    },
    {
      "id": "project",
      "type": "pickString",
      "description": "Project",
      "options": ["Vss2Git", "VssDump", "HashTest"],
      "default": "Vss2Git"
    },
    {
      "id": "configuration",
      "type": "pickString",
      "description": "Configuration",
      "options": ["Debug", "Release"],
      "default": "Debug"
    },
    {
      "id": "projectPath",
      "type": "pickString",
      "description": "Project path",
      "options": [
        "Vss2Git/Vss2Git.csproj",
        "VssDump/VssDump.csproj",
        "HashTest/HashTest.csproj"
      ],
      "default": "Vss2Git/Vss2Git.csproj"
    }
  ]
}
